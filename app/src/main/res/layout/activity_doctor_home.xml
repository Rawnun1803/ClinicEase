<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header -->
    <LinearLayout
        android:orientation="horizontal"
        android:padding="@dimen/pad"
        android:elevation="6dp"
        android:background="@drawable/header_background"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_doctor_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/doctor_name"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/today_date"
                android:textColor="#DDE9FF"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_settings"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_manage"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@android:color/white"
            android:contentDescription="@string/settings_label"
            tools:ignore="UseAppTint" />

        <ImageButton
            android:id="@+id/btn_logout"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_lock_power_off"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@android:color/white"
            android:contentDescription="@string/logout_label"
            android:layout_marginStart="8dp"
            tools:ignore="UseAppTint" />
    </LinearLayout>

    <LinearLayout
        android:padding="@dimen/pad_small"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_appointments_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/pad_small"
            android:text="@string/appointments_label"
            android:textSize="20sp"
            android:textColor="@color/primary"
            android:fontFamily="sans-serif-medium" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp" />

        <TextView
            android:id="@+id/tv_conflict_banner"
            android:visibility="gone"
            android:layout_marginTop="@dimen/pad_small"
            android:padding="@dimen/pad_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/destructive"
            android:textColor="@color/white"
            android:text="@string/conflict_banner" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_appointments"
        android:clipToPadding="false"
        android:paddingStart="@dimen/pad"
        android:paddingEnd="@dimen/pad"
        android:paddingBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
