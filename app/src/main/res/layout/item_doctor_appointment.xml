<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/pad"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardElevation="6dp"
    >

    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/pad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09:00 AM"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/primary" />

            <TextView
                android:id="@+id/item_patient"
                android:layout_marginStart="@dimen/pad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:fontFamily="sans-serif"
                android:textColor="@color/black" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_reason"
            android:layout_marginTop="@dimen/pad_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary"
            android:text="Reason for visit" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/pad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">

            <Button
                android:id="@+id/btn_edit"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:backgroundTint="@color/primary"
                android:textColor="@android:color/white"
                android:text="@string/btn_edit"
                android:contentDescription="@string/desc_edit" />

            <Button
                android:id="@+id/btn_extend"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="@dimen/pad_small"
                android:layout_weight="1"
                android:backgroundTint="@color/primary"
                android:textColor="@android:color/white"
                android:text="@string/btn_extend"
                android:contentDescription="@string/desc_extend" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="@dimen/pad_small"
                android:layout_weight="1"
                android:backgroundTint="@color/primary"
                android:textColor="@android:color/white"
                android:text="@string/btn_cancel"
                android:contentDescription="@string/desc_cancel" />

            <Button
                android:id="@+id/btn_done"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="@dimen/pad_small"
                android:layout_weight="1"
                android:backgroundTint="@color/primary"
                android:textColor="@android:color/white"
                android:text="@string/btn_done"
                android:contentDescription="@string/desc_done" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
