<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/pad"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <TextView
            android:id="@+id/tv_profile_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/patient_profile_title"
            android:textSize="24sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/primary" />

        <!-- Patient Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/pad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/card_radius"
            app:cardElevation="4dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="@dimen/pad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/pp_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sample_patient_name"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/pp_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/pad_small"
                    android:text="@string/sample_patient_phone"
                    android:textSize="16sp"
                    android:textColor="@color/secondary" />

                <TextView
                    android:id="@+id/pp_last_visit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/pad_small"
                    android:text="@string/sample_patient_last_visit"
                    android:textSize="16sp"
                    android:textColor="@color/secondary" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Recent Visits Header -->
        <TextView
            android:id="@+id/tv_recent_visits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pad"
            android:text="@string/recent_visits"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/primary" />

        <!-- Visit History Container -->
        <LinearLayout
            android:id="@+id/pp_history_container"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/pad_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_visit_history" />

    </LinearLayout>
</ScrollView>
