<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="@dimen/pad_small"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardElevation="4dp"
    >

    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/pad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Date & Time Row -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/up_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sample_date"
                android:textColor="@color/primary"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                tools:text="Nov 5, 2025" />

            <TextView
                android:id="@+id/up_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/pad_small"
                android:text="@string/sample_time"
                android:textColor="@color/secondary"
                android:textSize="14sp"
                tools:text="10:00 AM" />
        </LinearLayout>

        <!-- Doctor Name -->
        <TextView
            android:id="@+id/up_doctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pad_small"
            android:text="@string/sample_doctor_name"
            android:textColor="@color/primary"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            tools:text="Dr. Sarah Johnson" />

        <!-- Reason -->
        <TextView
            android:id="@+id/up_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pad_small"
            android:text="@string/sample_reason"
            android:textColor="@color/secondary"
            android:textSize="14sp"
            tools:text="General Checkup" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
